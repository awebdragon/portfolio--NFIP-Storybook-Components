{% embed '@nfip-components/nfip-section/nfip-section.twig' %}
  {% block sectionContent %}
    <div class="grid-row">
    {% for icon in icons %}
    <div class="padding-2px icon-list-item">
      <svg class="usa-icon" aria-hidden="true" role="img" title="{{ icon.name }}">
        <use xlink:href="{{ img_path }}/sprite.svg#{{ icon.name }}"></use>
      </svg>
      <div class="icon-name">{{ icon.name }}</div>
    </div>
    {% endfor %}
    </div>
  {% endblock %}
