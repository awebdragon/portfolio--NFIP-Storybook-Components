
{% set column_class = hero_image ? "desktop:grid-col-7" : "desktop:grid-col-10" %}

<div class="nfip-hero">
  {% embed '@nfip-components/nfip-section/nfip-section.twig' with { containerWidth: 'desktop', paddingBottom: 0, paddingTop: 0, backgroundColor: backgroundColor|default('dark-blue') } %}
    {% block sectionContent %}

      <div class="grid-row grid-gap flex-justify padding-top-2 tablet:padding-bottom-0">
        <div class="{{ column_class }}">
          <div class="nfip-hero__body{% if hero_image %} padding-top-4 tablet:padding-top-0{% endif %} tablet:padding-bottom-4">
            {% if breadcrumbs %}
            <div class="margin-bottom-2">
              {% include '@nfip-components/nfip-breadcrumb/src/nfip-breadcrumb.twig' with { modifier: bc_modifier } %}
            </div>
            {% endif %}
            {% if hero_title %}<h1>{{hero_title}}</h1>{% endif %}
            {% if description %}{{description}}{% endif %}
          </div>
        </div>
        {% if hero_image %}
        <div class="desktop:grid-col-5">
          <div class="nfip-hero__image desktop:height-full">
            <img src="{{hero_image}}" alt="{{ hero_image_alt }}" class="width-full desktop:height-full">
          </div>
        </div>
        {% endif %}
      </div>

    {% endblock %}
  {% endembed %}
</div>