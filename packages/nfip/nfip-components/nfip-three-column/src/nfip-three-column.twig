


{% for rowcontent in threecolumn %}
  <div class="grid-row grid-gap tablet:margin-top-4">
    {% for column in rowcontent %}
      <div class="{{ column.column_classes }}">
          <h5 class="margin-top-0 tablet:margin-bottom-0">{{ column.heading }} </h5>
          <p>{{ column.body }}</p>
      </div>
    {% endfor %}  
  </div>  
{% endfor %}

