{% set sizeMap = {
  h1: "font-sans-3xl",
  h2: "font-sans-2xl",
  h3: "font-sans-xl",
  h4: "font-sans-lg",
  h5: "font-sans-md",
  h6: "font-sans-sm"
}
%}
<ol class="usa-process-list nfip-process-list">
  {% for item in process %}
  <li class="usa-process-list__item">
    {% if item.body %}
    <{{headingSize|default("h4")}}>{{item.heading}}</{{headingSize|default("h4")}}>
    <div class="font-sans-md">
    {{item.body}}
    </div>
    {% else %}
    <div class="{{sizeMap[headingSize|default("h4")]}} line-height-sans-1 text-bold margin-bottom-08em margin-top-08em">{{item.heading}}</div>
    {% endif %}
  </li>
  {% endfor %}
</ol>
