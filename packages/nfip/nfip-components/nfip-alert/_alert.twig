<div class="flsm-alert usa-alert usa-alert--{{ alert_style }}{% if alert_style == 'emergency' %} usa-dark-background{% endif %}{% if slim == true %} usa-alert--slim{% endif %}">
  <div class="usa-alert__body">

    {% if slim == false %}
    <h4 class="usa-alert__heading">{{ heading_text }}</h4>
    {% endif %}

    <p class="usa-alert__text">
      {{ body_text }}
    </p>
  </div>
</div>