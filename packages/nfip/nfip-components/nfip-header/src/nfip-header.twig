{% if header.cta.button_inverse == true %}
    {% set button_style = 'inverse' %}
{% else %}
    {% set button_style = 'normal' %}
{% endif %}

<section class="usa-section">
    <div class="grid-container maxw-desktop-lg">
        <div class="grid-row grid-gap">
            <div class="tablet:grid-col-12 text-center font-family-sans margin-bottom-10">
                <h1 class="margin-y-4">{{ header.title }}</h1>

                {% if ( (header.text) or (header.cta.link) ) %}
                    <div class="margin-top-4 font-family-sans tablet:margin-bottom-0 margin-bottom-2 nfip-large-cta-cta">
                        {% if header.text %}<h2 class="tablet:display-inline  text-sub padding-right-1">{{ header.text }}</h2>{% endif %}

                        {% if header.cta.link %}
                            <div class="tablet:display-inline">
                                {% include '@nfip-components/nfip-button/src/_button.twig' with {
                                    'button_type': 'default',
                                    'button_markup': 'link',
                                    'button_text': header.cta.button_label,
                                    'button_url': header.cta.link,
                                    'button_target': '_self',
                                    'button_style': button_style,
                                } %}
                            </div>
                        {% endif %}

                    </div> 
                {% endif %}

            </div>    
        </div>
    </div>       
</section>