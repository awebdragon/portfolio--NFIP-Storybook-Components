{% set close_icon %}
  <svg class="usa-icon" aria-hidden="true" focusable="false" role="img">
    <use xlink:href="./img/sprite.svg#{{ close_button.icon_type | default("close") }}"></use>
  </svg>
{% endset %}
{% set modifier = "usa-modal--lg maxw-desktop nfip-modal" %}

  
  <div class="usa-modal {{ modifier }}" id="{{ id }}" aria-labelledby="{{ id }}-header" aria-describedby="{{ id }}-description"{% if forced %} data-force-action{% endif -%}>

    <div class="grid-row">
      <div class="desktop:width-full margin-x-4">

        <div class="usa-modal__content">
          <div class="usa-modal__main">
            <{{ modalHeadlingLevel|default('h2') }} id="{{ id }}-header"{% if modalHeadingClasses %} class="{{modalHeadingClasses}}"{% endif %}>{{modalHeading}}</{{modalHeadlingLevel|default('h2')}}>
            <div class="usa-prose" id="{{ id }}-description">
              {% block modalContent %}{% endblock %}
            </div>

            <div class="usa-modal__footer">
              {% block modalFooter %}{% endblock %}
            </div>
          </div>

          <button type="button" class="usa-button usa-modal__close" aria-label="{{ close_button.aria_label }}" data-close-modal>
            {% if close_button.text -%}
              {{ close_button.text }}
            {% else -%}
              {{ close_icon | raw }}
            {% endif -%}
          </button>
        </div>

      </div>
    </div>


</div>