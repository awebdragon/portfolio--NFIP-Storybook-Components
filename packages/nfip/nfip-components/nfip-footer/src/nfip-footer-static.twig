<footer class="nfip-footer">
  
    <div class="usa-footer__secondary-section">
    <div class="grid-container">
        <div class="grid-row grid-gap">
          <div class="usa-footer__logo grid-row mobile-lg:grid-col-5 mobile-lg:grid-gap-2">
            <div class="mobile-lg:grid-col-auto">
              <img class="usa-footer__logo-img" src="{{ img_path }}/nfip/footer_logo2.svg" alt="{{ footer.secondary_section.agency_name |e }}">
            </div>
            {# <div class="mobile-lg:grid-col-auto">
              <p class="usa-footer__logo-heading">
                {{ footer.secondary_section.agency_name |e }}
              </p>
            </div> #}
          </div>
          <div class="usa-footer__contact-links mobile-lg:grid-col-7">
            {% include "@components/usa-footer/src/_includes/usa-social-nav.twig" %}
            {% if footer.secondary_section.heading %}
            <p class="usa-footer__contact-heading">
              {{ footer.secondary_section.heading |e }}
            </p>
            {% endif %}
            {# {% if footer.secondary_section.phone or footer.secondary_section.email %}
            <address class="usa-footer__address">
              <div class="usa-footer__contact-info grid-row grid-gap">
                <div class="grid-col-auto">
                  <a href="tel:1-800-555-5555">
                    {{ footer.secondary_section.phone |e }}
                  </a>
                </div>
                <div class="grid-col-auto">
                  <a href="mailto:info@agency.gov">
                    {{ footer.secondary_section.email |e }}
                  </a>
                </div>
              </div>
            </address>
            {% endif %} #}

            {# <div class="contact-link font-body-lg text-bold"><a href="/contact" class="survey-processed text-nfip-blue">Contact NFIP</a> </div> #}

            <h2 class="usa-footer__contact-heading"><a href="/contact">Contact Floodsmart</a></h2>

            <address class="usa-footer__address">
              <div class="usa-footer__contact-info grid-row grid-gap">
                <div class="grid-col-auto">
                  <p class="margin-top-0">
                    <span>{{address_line1}}</span><br>
                    <span>{{street_address}}</span>, <span>{{locality}}</span>, <span>{{region}}</span> <span>{{postal_code}}</span>
                  </p>
                </div>
                <div class="grid-col-auto">
                  <p class="margin-top-0">{{ info }}</p>
                </div>
              </div>
            </address>
          </div>
        </div>
    </div>
  </div>

  <div class="nfip-footer-main bg-primary padding-y-4">

    <div class="grid-container width-full maxw-desktop">

      <div class="grid-row grid-gap">
        <div class="footer-bottom-left mobile-lg:grid-col-9">
          <div class="dhs-tagline grid-row flex-no-wrap flex-align-center grid-gap">
            <div class="grid-col-auto">
              <img src="{{img_path}}/nfip/dhs.svg" class="dhs-logo width-6 height-6" alt="U.S. Department of Homeland Security">
            </div>
            <p class="grid-col-fill">{{tagline}}</p>
          </div>

          <div class="grid-row grid-gap">
            {# <div class="tablet:grid-col-4">
              <address class="margin-top-2">
                <span>{{address_line1}}</span><br>
                <span>{{street_address}}</span>, <span>{{locality}}</span>, <span>{{region}}</span> <span>{{postal_code}}</span>
              </address>
              <p>{{info}}</p>
            </div> #}

            {% for column in footer_columns %}
              <div class="mobile-lg:grid-col">
                <p><strong>{{ column.heading }}</strong></p>
                {% if column.links %}
                <nav class="fema-links">
                  <ul>
                  {% for link in column.links %}
                    <li>
                      {% if link.url %}
                      <a href="{{ link.url }}">{{ link.label }}</a>
                      {% elseif link.sub_nav %}
                      <details>
                        <summary>
                          <span>{{ link.label }}</span>
                          <svg class="usa-icon" aria-hidden="true" focusable="false" role="img">
                            <use xlink:href="{{img_path}}/sprite.svg#add"></use>
                          </svg>
                        </summary>
                        <ul>
                        {% for subnav_link in link.sub_nav %}
                          <li><a href="{{subnav_link.url}}">{{subnav_link.label}}</a></li>
                        {% endfor %}
                        </ul>
                      </details>
                      {% endif %}
                    </li>
                  {% endfor %}
                  </ul>
                </nav>
                {% endif %}
              </div>
            {% endfor %}
          </div>
        </div>

        <div class="footer-bottom-right mobile-lg:margin-left-auto mobile:margin-x-auto mobile:padding-top-2">
          <iframe src="https://www.dhs.gov/ntas/" name="National Terrorism Advisory System" title="National Terrorism Advisory System" width="170" height="180" scrolling="no" frameborder="0" seamless border="0"></iframe>
        </div>
      </div>

    </div>

  </div>
</footer>