{% if column.cta.button_inverse == true %}
    {% set button_style = 'inverse' %}
{% else %}
    {% set button_style = 'normal' %}
{% endif %}

<div class="grid-row nfip-three-up">
  {% for column in columns %}
  <div class="desktop:grid-col-4{% if column.extra_classes %} {{ column.extra_classes }}{% endif %}">
    <h3>{{ column.heading }}</h3>

    <p>{{ column.body }}</p>

    {% include '@nfip-components/nfip-button/src/_button.twig' with {
        'button_type': 'default',
        'button_markup': 'link',
        'button_text': column.cta.button_label,
        'button_url': column.cta.link,
        'button_target': '_self',
      } %}
  </div>
  {% endfor %}
</div>