{% 
  set whiteText = [
    "black",
    "base-dark",
    "base-darker",
    "base-darkest",
    "primary",
    "primary-dark",
    "primary-darker",
    "secondary-light",
    "secondary",
    "secondary-dark",
    "secondary-darker",
    "accent-warm-dark",
    "accent-warm-darker",
    "accent-cool",
    "accent-cool-dark",
    "accent-cool-darker",
    "nfip-violet",
    "nfip-violet-30",
    "nfip-violet-60",
    "nfip-teal",
    "nfip-teal-30",
    "nfip-teal-60",
    "nfip-orange-60",
  ]
%}
  <section class="nfip-lp-section-bg{% if extraClasses %} {{extraClasses}}{% endif %}">
  <div class="nfip-lp-section-bg--bg" style="background-image: url({{backgroundImage}})"></div>
  {% block animationLayer %}{% endblock %}
  <div class="grid-container maxw-{{containerWidth|default("desktop-lg")}} position-relative z-top nfip-lp-section-bg--container">
    <div class="grid-col-12{% if contentWidth|default('half') == 'half' %} tablet:grid-col-8 desktop:grid-col-6{% endif %}">
      <div class="nfip-lp-section-bg--content bg-{{contentBackground|default('nfip-violet-60')}}{% if contentBackground|default('nfip-violet-60') in whiteText %} text-white usa-dark-background{% endif %}">
        {% block sectionContent %}{% endblock %}
      </div>
    </div>
  </div>
</section>