<blockquote class="grid-row grid-gap flex-justify flex-align-center{% if not image %} padding-y-205 border-accent-cool-lightest border-y{% endif %}" cite="{{name}}{% if quote_title %}, {{quote_title}}{% endif %}">
  {% if image %}
  <div class="tablet:grid-col-6 desktop:grid-col-5 margin-bottom-4 tablet:margin-bottom-0">
    <img src="{{ image }}" alt="{{ image_alt }}">
  </div>
  {% endif %}
  <div class="tablet:grid-col">
    <div class="font-body-2xl text-light line-height-body-2 margin-bottom-3 text-indent-neg-2">“{{ quote }}”</div>
    <div itemscope itemprop="Person" itemtype="https://schema.org/Person">
      <strong itemprop="name">{{ name }}</strong><br>
      {{quote_title}}
    </div>
  </div>
</blockquote>