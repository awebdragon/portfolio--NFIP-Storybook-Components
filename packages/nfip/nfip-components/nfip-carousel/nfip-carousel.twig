<div class="nfip-carousel{% if options.nav_position == 'center' %} nav-center{% endif %}"{% if options %} data-options='{{options|json_encode}}'{% endif %} role="region" aria-roledescription="carousel" aria-label="{{carousel_aria_name|default("Carousel")}}">
  <div class="nfip-carousel__controlgroup" role="group" aria-label="Slide controls">
    <button aria-label="Previous Slide" class="nfip-carousel__controls prev" data-direction="-1">
      <span class="usa-sr-only">Previous Slide</span>
    </button>
    <button aria-label="Next Slide" class="nfip-carousel__controls next" data-direction="1">
      <span class="usa-sr-only">Next Slide</span>
    </button>
  </div>
  <div class="nfip-carousel__slider">
  {% block carouselSlides %}{% endblock %}
  </div>
</div>