{% set tabID = random() %}
<div class="nfip-tabs{% if nfipTabsClasses %} {{ nfipTabsClasses }}{% endif %}" id="nfip-tabs-{{tabID}}">
  <div class="nfip-tabs-mobile">
    <div>
      <select>
        {% for tab in nfipTabs %}
        <option{% if loop.index == 1 %} selected{% endif %} value="{{ loop.index - 1}}">{{ tab.title }}</option>
        {% endfor %}
      </select>
    </div>
  </div>
  <div role="tablist">
  {% for tab in nfipTabs %}
    {% if tabs_heading_level != "none" %}<{{ tabs_heading_level }} class="nfip-tabs-tab-heading" role="tab" aria-selected="{{ loop.index == 1 ? 'true' : 'false' }}">{% endif %}
      <button{% if tabs_heading_level == "none" %} class="nfip-tabs-tab-heading" role="tab" aria-selected="{{ loop.index == 1 ? 'true' : 'false' }}"{% endif %} id="nfip-tabs-{{tabID}}-tab-{{loop.index}}" aria-controls="nfip-tabs-{{tabID}}-{{loop.index}}">
        {{ tab.title }}
      </button>
    {% if tabs_heading_level != "none" %}</{{ tabs_heading_level }}>{% endif %}
  {% endfor %}
  </div>
  {% for tab in nfipTabs %}
    <div class="nfip-tabs-tabpanel" role="tabpanel" id="nfip-tabs-{{tabID}}-{{loop.index}}" aria-labelledby="nfip-tabs-{{tabID}}-tab-{{loop.index}}" tabindex="0" {% if loop.index > 1 %} hidden{% endif %}>
      {% if tab.image %}<img src="{{tab.image}}">{% endif %}
      <div class="nfip-tabs-tabcontent">
        {{ tab.content }}
        {% if tab.cta %}
          {% for cta in tab.cta %}
          <a href="{{cta.button_target}}" class="{% if cta.button_class %}{{cta.button_class}}{% else %} usa-button flsm-button--default{% endif %}">{{cta.button_text}}</a>
          {% endfor %}
        {% endif %}
      </div>
    </div>
  {% endfor %}
</div>