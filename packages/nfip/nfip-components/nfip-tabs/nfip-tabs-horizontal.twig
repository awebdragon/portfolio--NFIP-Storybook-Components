<div class="nfip-tabs tabs-horizontal{% if nfipTabsClasses %} {{ nfipTabsClasses }}{% endif %}"  id="nfip-tabs">
  <div class="nfip-tabs-mobile">
    <div>
      <select>
        {% for tab in nfipTabs %}
        <option{% if loop.index == 1 %} selected{% endif %} value="{{ loop.index - 1}}">{{ tab.title }}</option>
        {% endfor %}
      </select>
    </div>
  </div>

  <div role="tablist">
  {% for tab in nfipTabs %}
    {% if tabs_heading_level != "none" %}<{{ tabs_heading_level }} role="tab" aria-selected="{{ loop.index == 1 ? 'true' : 'false' }}" {% if {{ tab.tabcolor }} %} class="{{ tab.tabcolor }}"{% endif %}>{% endif %}

    <button class="nfip-tabs-tab-heading{% if tab.tabcolor %} {{ tab.tabcolor }}{% endif %}{% if tabs_heading_level == "none" %} role="tab" aria-selected="{{ loop.index == 1 ? 'true' : 'false' }}"{% endif %} id="nfip-tabs-tab-{{loop.index}}{% if tab.id %}{{'-' ~ tab.id}}{% endif %}" aria-controls="nfip-tabs{% if tab.id %}{{'-' ~ tab.id}}{% endif %}-{{loop.index}}">{{ tab.title }}</button>

    {% if tabs_heading_level != "none" %}</{{ tabs_heading_level }}>{% endif %}
  {% endfor %}
  </div>

  {% for tab in nfipTabs %}
    <div class="nfip-tabs-tabpanel" role="tabpanel" id="nfip-tabs{% if tab.id %}{{'-' ~ tab.id}}{% endif %}-{{loop.index}}" aria-labelledby="nfip-tabs{% if tab.id %}{{'-' ~ tab.id}}{% endif %}-tab-{{loop.index}}" tabindex="0" {% if loop.index > 1 %} hidden{% endif %}>
      {% if tab.image %}<img src="{{tab.image}}">{% endif %}
      <div class="nfip-tabs-tabcontent">

        {% if tab.content %}{{ tab.content }}{% endif %}

        {# for complex content, 1-4 tabs #}
        {% if loop.index == 1 %}{% block tab1Content %}{% endblock %}{% endif %}
        {% if loop.index == 2 %}{% block tab2Content %}{% endblock %}{% endif %}
        {% if loop.index == 3 %}{% block tab3Content %}{% endblock %}{% endif %}
        {% if loop.index == 4 %}{% block tab4Content %}{% endblock %}{% endif %}

        {% if tab.cta %}
          {% for cta in tab.cta %}
          <a href="{{cta.button_target}}" class="nfip-button {% if cta.button_class %}{{cta.button_class}}{% else %} nfip-btn--primary{% endif %}">{{cta.button_text}}</a>
          {% endfor %}
        {% endif %}
      </div>
    </div>
  {% endfor %}
</div>