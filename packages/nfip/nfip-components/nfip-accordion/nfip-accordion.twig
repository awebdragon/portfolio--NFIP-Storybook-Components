<div class="grid-container">
  <p>Example:</p>

  <div class="grid-row grid-gap">
    <div class="tablet:grid-col">
      {% include '@nfip-components/nfip-accordion/_accordion.twig' %}
    </div>
  </div>

  <p>&nbsp;</p>

  <p>Twig include:</p>

  <div class="padding-2 margin-right-1 bg-base-lightest">
    <pre>
      &#123;% include '@nfip-components/nfip-accordion/_accordion.twig' with {
        'accordion_style': '{{ accordion_style }}',
        'expand_first': {{ expand_first }},
        'multiselectable': {{ multiselectable }},
{% if accordions_bg_color %}
        'accordions_bg_color': '{{ accordions_bg_color }}',
{% endif %}{% if container_id %}
        'container_id': '{{ container_id }}',
{% endif %}{% if extra_classes %}
        'extra_classes': '{{ extra_classes }}',
{% endif %}
        'accordions_heading_level': '{{ accordions_heading_level }}',
        'nfipAccordions': [
          {
            'title': 'Accordion Title',
            'title_bg_color': 'optional-bg-color-class',
            'title_extra_classes': 'title optional extra class-names',
            'body_extra_classes': ' body optional extra class-names',
            'simpleContent': 'Some simple content.',
{% if accordion_style == "Icon" %}
            'image_icon': 'https://picsum.photos/60/60?random=1',
            'image_alt': '',
{% endif %}
          },
        ]
      } %&#125;</pre>
  </div>
</div>