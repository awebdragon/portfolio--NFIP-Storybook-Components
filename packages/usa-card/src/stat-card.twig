{% set card_classes = 'usa-card ' ~ modifier|default('') %}

<div class="usa-card-group grid-container font-family-serif">
  <div class="grid-row">
  {% for card in cards %}
     {% set card_overrides = [
      card.classes_override|default(default_classes)
    ] %}

     <div class="{{ card_classes ~ " " ~ card_overrides|join(' ') }}">
        <div class="usa-card__container {{ card.container_overrides|default('') }}">
            <div class="usa-card__header">
                <h2 class="usa-card__heading">{{ card.title }}</h2>
            </div>
        
            <div class="usa-card__body {{ card.body_overrides }}">
            {% if card.content %}
                <p>{{ card.content | raw }}</p>
            {% endif %}
            </div>
            {% if card.cta_text is not empty %}
            <!--div class="usa-card__footer"-->
            <a href="#">
                <button type="button" class="usa-button usa-button--outline">{{ card.cta_text }}</button>
            </a>
            <!--/div-->
            {% endif %}
        </div>
     </div>   
  {% endfor %}
  </div>
</div>  
